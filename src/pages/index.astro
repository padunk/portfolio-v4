---
import { Image } from 'astro:assets'
// import { Icon } from 'astro-icon/components'
import { Github, Twitter, Codepen, MonitorDown, Mail } from 'lucide-react'
import logo from '@/assets/images/profile_picture-small.jpg'

import Layout from '@/layouts/Layout.astro'

const subject = encodeURIComponent("Hi Abraham, let's connect!")
---

<Layout>
  <div>
    <div
      style='display: flex; flex-direction: column; justify-content: center; align-items: center; margin-bottom: 3rem;'
    >
      <div style='margin-bottom: 1.5rem;'>
        <Image
          src={logo}
          alt='my profile picture with gradient background'
          width={100}
          height={100}
          style={{ borderRadius: '99999px' }}
        />
      </div>
      <h1 hidden>Abraham Anak Agung Portfolio</h1>
      <ul style='display: flex; column-gap: 1.5rem; margin-top: 1rem;'>
        <li>
          <a
            href='https://github.com/padunk'
            target='_blank'
            rel='noopener noreferrer'
            title='Github'
          >
            <Github />
          </a>
        </li>
        <li>
          <a
            href='https://x.com/anakagungcorp'
            target='_blank'
            rel='noopener noreferrer'
            title='Twitter'
          >
            <Twitter />
          </a>
        </li>
        <li>
          <a
            href='https://codepen.io/padunk'
            target='_blank'
            rel='noopener noreferrer'
            title='Codepen'
          >
            <Codepen />
          </a>
        </li>
        <li>
          <a
            href='Resume_AbrahamAgung.pdf'
            download='Resume_AbrahamAgung.pdf'
            title='Download resume'
          >
            <MonitorDown />
          </a>
        </li>
        <li>
          <a
            href=`mailto:abraham.anak.agung@gmail.com?subject=${subject}`
            title='Mail me'
          >
            <Mail />
          </a>
        </li>
      </ul>
    </div>
    <div
      style='text-align: center; margin-bottom: 3rem; line-height: 1.5rem; letter-spacing: 0.025em; max-width: 65ch;'
    >
      <p
        style='font-size: 2rem; line-height: 2.25rem; text-align: center; margin-bottom: 1.5rem;'
      >
        Hi 👋🏼, I am Abraham.
      </p>
      <p style='margin-top: 0.5rem'>
        I am a Human Web and Native Developer from Indonesia 🇮🇩
      </p>
      <p style='margin-top: 0.5rem'>
        I love working remotely and creating strong web and mobile apps from raw
        ideas to production. I have more than 5 years of experience leading
        teams in designing efficient ecosystems and user-friendly products.
      </p>
    </div>
  </div>
</Layout>
