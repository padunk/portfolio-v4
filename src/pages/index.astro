---
import { Image } from 'astro:assets'
// import { Icon } from 'astro-icon/components'
import { Github, Twitter, Codepen, MonitorDown, Mail } from 'lucide-react'
import logo from '@/assets/images/aaa_logo_circle.png'

import Layout from '@/layouts/Layout.astro'

const subject = encodeURIComponent("Hi Abraham, let's connect!")
---

<Layout>
  <div>
    <div
      style={{
        display: 'flex',
        flexDirection: 'column',
        justifyContent: 'center',
        alignItems: 'center',
        marginBottom: '3rem',
      }}
    >
      <div style={{ marginBottom: '1.5rem' }}>
        <Image
          src={logo}
          alt='abraham anak agung logo'
          width={80}
          height={80}
        />
      </div>
      <h1 hidden>Abraham Anak Agung Portfolio</h1>
      <ul style={{ display: 'flex', columnGap: '1.5rem', marginTop: '1rem' }}>
        <li>
          <a
            href='https://github.com/padunk'
            target='_blank'
            rel='noopener noreferrer'
            title='Github'
          >
            <Github />
          </a>
        </li>
        <li>
          <a
            href='https://x.com/anakagungcorp'
            target='_blank'
            rel='noopener noreferrer'
            title='Twitter'
          >
            <Twitter />
          </a>
        </li>
        <li>
          <a
            href='https://codepen.io/padunk'
            target='_blank'
            rel='noopener noreferrer'
            title='Codepen'
          >
            <Codepen />
          </a>
        </li>
        <li>
          <a
            href='Resume_AbrahamAgung.pdf'
            download='Resume_AbrahamAgung.pdf'
            title='Download resume'
          >
            <MonitorDown />
          </a>
        </li>
        <li>
          <a
            href=`mailto:abraham.anak.agung@gmail.com?subject=${subject}`
            title='Mail me'
          >
            <Mail />
          </a>
        </li>
      </ul>
    </div>
    <div
      style={{
        textAlign: 'center',
        marginBottom: '3rem',
        lineHeight: '1.5rem',
        letterSpacing: '0.025em',
        maxWidth: '65ch',
      }}
    >
      <p
        style={{
          fontSize: '2rem',
          lineHeight: '2.25rem',
          textAlign: 'center',
          marginBottom: '1.5rem',
        }}
      >
        Hi 👋🏼, I am Abraham.
      </p>
      <p style={{ marginTop: '0.5rem' }}>
        I am a Human Web and Native Developer from Indonesia 🇮🇩
      </p>
      <p style={{ marginTop: '0.5rem' }}>
        I love working remotely and creating strong web and mobile apps from
        ideas. Experience leading teams in designing efficient ecosystems and
        user-friendly experiences.
      </p>
    </div>
  </div>
</Layout>
